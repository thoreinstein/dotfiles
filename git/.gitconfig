[user]
	name = Jim Myers
	email = myersjim223@gmail.com
	signingkey = 0x28E7C0B3D41D890F

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = current

[credential]
	helper = osxkeychain

[commit]
	gpgsign = true

[alias]
	s = status
	co = checkout
	cb = checkout -b
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit
	wa = "!f() { git worktree add --track -b $1 $1 $2; cd $1; }; f"
	wl = worktree list
	wr = worktree remove
	rewrite = rebase -i
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[gpg]
	program = /opt/homebrew/bin/gpg