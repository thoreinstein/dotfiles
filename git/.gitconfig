# User info configured in ~/.gitconfig.local (not tracked in dotfiles)
# Example ~/.gitconfig.local:
#   [user]
#     name = Your Name
#     email = your@email.com
#     signingkey = 0xYOURKEYID

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = current

[credential]
	helper = osxkeychain

[commit]
	gpgsign = true

[alias]
	s = status -sb
  d = diff --stat
	co = checkout
	cb = checkout -b
	cm = commit -m
	ca = commit --amend
	can = commit --amend --no-edit
	wl = worktree list
	wr = worktree remove
	rewrite = rebase -i
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  wa = "!f() { git worktree add --track -b $1 $1 $2; cd $1; }; f"
  pr = "!f() { git worktree add ../pr/$1 && cd ../pr/$1 && gh pr checkout $1; }; f"

[gpg]
	program = gpg  # Let PATH resolve it (works on macOS and Linux)

[include]
  path = ~/.gitconfig.local
[rerere]
	enabled = true

[merge]
  tool = diffview
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "diffview"]
  cmd = nvim -n -c "DiffviewOpen" "$MERGE"
[url "git@github.com:"]
	insteadOf = https://github.com/
